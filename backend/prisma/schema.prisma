// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  email             String   @unique
  motDePasse        String
  motDePasseDefini  Boolean  @default(false)
  role              String   @default("chauffeur")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @default(now())
  chauffeur         Chauffeur?
}

model Chauffeur {
  id          Int      @id @default(autoincrement())
  nom         String
  postnom     String
  prenom      String
  sexe        String
  telephone   String
  dateEmbauche DateTime @default(now())
  statut      String   @default("actif")
  userId      Int      @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicules   Vehicule[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Vehicule {
  id              Int      @id @default(autoincrement())
  immatriculation String   @unique
  marque          String
  modele          String
  annee           Int      @default(2024)
  categorie       String   @default("LIGHT")
  kilometrage     Int      @default(0)
  statut          String   @default("disponible")
  dateAjout       DateTime @default(now())
  chauffeurId     Int?
  chauffeur       Chauffeur? @relation(fields: [chauffeurId], references: [id])
  historiqueEntretiens HistoriqueEntretien[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())
}

model HistoriqueEntretien {
  id              Int      @id @default(autoincrement())
  vehiculeId      Int
  vehicule        Vehicule @relation(fields: [vehiculeId], references: [id], onDelete: Cascade)
  type            String   // vidange, bougies, freins
  kilometrage     Int      // Kilom√©trage au moment de l'entretien
  description     String?
  dateEffectuee   DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())
}
